FROM alpine:3.23.2@sha256:865b95f46d98cf867a156fe4a135ad3fe50d2056aa3f25ed31662dff6da4eb62

# Already included in BusyBox
#   wget
#   telnet (part of busybox-extras)
#   ip
#   ifconfig
#   ping
#   traceroute
#   nslookup

RUN     apk update \
    &&  for pkg in \
            busybox-extras \
            coreutils \
            findutils \
            # man Pages
            mandoc \
            man-pages \
            mandoc-apropos \
            less \
            # CLI Tools
            bash \
            grep \
            vim \
            nano \
            git \
            jq \
            yq \
            kubectl \
            k9s \
            helm \
            github-cli \
            glab \
            # Helper
            rsync \
            rclone \
            pv \
            # HTTP
            curl \
            mitmproxy \
            # Mail
            mailutils \
            ssmtp \
            # Web Browser
            lynx \
            w3m \
            links \
            # Clients
            openssh-client \
            mysql-client \
            postgresql-client \
            s3cmd \
            restic \
            # Network and System Tools
            bmon \
            dnsmasq \
            iftop \
            iperf \
            iperf3 \
            mtr \
            nmap \
            strace \
            sysstat \
            tcpdump \
            bind-tools \
            libcap \
        ; do \
            # it's okay for this command to fail
            apk add $pkg || true \
        ; done \
        # Try to install *-doc package for all currently installed packages
    &&  for pkg in $(apk list -I | awk '{print $1}' | sed 's/-[^-]*-[^-]*$//'); do \
            # it's okay for this command to fail
            apk add ${pkg}-doc || true \
        ; done \
    &&  rm -vrf /var/cache/apk/*

CMD ["/bin/bash"]
