FROM ubuntu:24.04@sha256:66460d557b25769b102175144d538d88219c077c678a49af4afca6fbfc1b5252

ENV TZ=Europe/Berlin

RUN     apt-get update \
    &&  echo "y\ny" | unminimize \
    &&  DEBIAN_FRONTEND=noninteractive apt-get -y install \
            # man Pages
            man \
            man-db \
            # CLI Tools
            vim \
            nano \
            git \
            jq \
            yq \
            gh \
            glab \
            # Helper
            rsync \
            rclone \
            pv \
            # HTTP
            curl \
            wget \
            mitmproxy \
            # Mail
            mailutils \
            ssmtp \
            # Web Browser
            lynx \
            w3m \
            links2 \
            # Clients
            openssh-client \
            mysql-client \
            postgresql-client \
            s3cmd \
            restic \
            # Network and System Tools
            bmon \
            dnsmasq \
            dnsutils \
            iftop \
            iperf \
            iperf3 \
            iproute2 \
            iputils-ping \
            mtr-tiny \
            net-tools \
            netcat-openbsd \
            ncat \
            nmap \
            strace \
            sysstat \
            tcpdump \
            tcptraceroute \
            traceroute \
            telnet

CMD ["/bin/bash"]
