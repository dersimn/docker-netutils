FROM ubuntu:24.04@sha256:278628f08d4979fb9af9ead44277dbc9c92c2465922310916ad0c46ec9999295

ENV TZ=Europe/Berlin \
    DEBIAN_FRONTEND=noninteractive

RUN apt-get update && \
    apt-get -y install \
        # CLI Tools
        vim \
        nano \
        git \
        jq \
        yq \
        # HTTP
        curl \
        wget \
        # Web Browser
        lynx \
        w3m \
        links2 \
        # Clients
        openssh-client \
        mysql-client \
        postgresql-client \
        s3cmd \
        # Network and System Tools
        bmon \
        dnsutils \
        iftop \
        iperf \
        iproute2 \
        iputils-ping \
        mtr-tiny \
        net-tools \
        netcat-openbsd \
        ncat \
        nmap \
        strace \
        sysstat \
        tcpdump \
        tcptraceroute \
        traceroute \
        telnet

CMD ["/bin/bash"]
